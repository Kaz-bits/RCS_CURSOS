}

# Condicional if para valor TRUE
if (TRUE) {
  print(var + 10)
}

# Condicinal if-else para valor FALSE
if (FALSE) {
  print(var + 10)
} else {
  print(var - 10)
}



# Crear variable "nat"
nat <- -2

# Sentencia if anidada
if (nat > 0) {
  print("Este es el primer if")
  if (nat %% 2 == 0) {
    print("Este es el segundo if")

  }
}


# Sintaxis del condicional if anidado
if (condition) { # Apertura del primer if
  if (condition) { # Apertura del segundo if
    if (condition) {
      
    }
  } # Cierre del segundo if
} # Cierre del primer if

# Crear una variable llamada "num"
num <- -2

# Sentencias if-else anidadas
if (num > 0) {
  if (num %% 2 == 0) {
    print("Este es un número par positivo")
  }
} else {
  if (num %% 2 == 0) {
    print("Este es un número par negativo")

  }
}





