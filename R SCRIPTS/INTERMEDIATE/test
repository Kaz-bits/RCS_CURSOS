# Determinar el desempeño de un(a) estudiante
# Escribir variables con los promedios
t <- 9.5
e <- 8.3
p <- 9.5

# Calcular el promedio general
calf <- (e * 0.6) + (t * 0.2) + (p * 0.2)

# Determinar si el o la estudiante aprobó
if (e >= 8) {
  if (t >= 9 & p >= 9) {
    if (calf >= 8.5) {
      print(paste("Aprobado(a) tu calificación es", calf))
    }
  }
}


if (e >= 8 & t >= 9 & p >= 9 & calf >= 8.5) {
  print(paste("Aprobado(a) tu calificación es", calf))




